        <property name="org.apache.ibatis.parsing.PropertyParser.enable-default-value" value="true"/>
        <property name="useName" value="{username:root}" />
    </properties>
    <settings>
        <setting name="cacheEnabled" value="false"/>
        <setting name="defaultExecutorType" value="REUSE"/>
        <setting name="useGeneratedKeys" value="true"/>
        <!-- <setting name="vfsImpl;" value="1"/>-->

        <!--
                自动把create_time 转换成 createTime
                不需要再添加 as 语句，如在mappers/*.xml文件中：
                以前使用这样的语句
                select create_time as createTime from your_table_name;
                现在使用这样的语句
                select create_time from your_table_name;
            -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <setting name="logImpl" value="STDOUT_LOGGING"/>

    </settings>

    <typeAliases>
        <typeAlias alias="user" type="com.tujia.train.mybatis.po.User"/>
    </typeAliases>

    <typeHandlers>
